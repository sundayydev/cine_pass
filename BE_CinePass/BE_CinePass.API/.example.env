# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_CONNECTION_STRING=Server=localhost;Port=5432;Database=cinepass_db;User Id=postgres;Password=your_password;

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET_KEY=your-super-secret-key-min-32-characters-long
JWT_ISSUER=CinePass
JWT_AUDIENCE=CinePassUsers
JWT_EXPIRE_HOURS=24

# ========================================
# MOMO PAYMENT CONFIGURATION
# ========================================
# Thông tin xác thực từ Momo
MOMO_PARTNER_CODE=YOUR_PARTNER_CODE
MOMO_ACCESS_KEY=YOUR_ACCESS_KEY
MOMO_SECRET_KEY=YOUR_SECRET_KEY

# URL Callback - Thay đổi domain theo môi trường
MOMO_RETURN_URL=https://your-domain.com/api/payment/momo/callback
MOMO_IPN_URL=https://your-domain.com/api/payment/momo/ipn

# Loại yêu cầu thanh toán (captureWallet, payWithATM, payWithCC)
MOMO_REQUEST_TYPE=captureWallet

# API Endpoints - Development
MOMO_API_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_QUERY_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/query
MOMO_POS_ENDPOINT=https://test-payment.momo.vn/gw_payment/pos/processor

# API Endpoints - Production (uncomment khi deploy production)
# MOMO_API_ENDPOINT=https://payment.momo.vn/v2/gateway/api/create
# MOMO_QUERY_ENDPOINT=https://payment.momo.vn/v2/gateway/api/query
# MOMO_POS_ENDPOINT=https://payment.momo.vn/gw_payment/pos/processor

# Môi trường (Development, Staging, Production)
MOMO_ENVIRONMENT=Development

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME=CinePass
APP_VERSION=1.0.0
ASPNETCORE_ENVIRONMENT=Development
